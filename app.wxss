/**app.wxss**/

page {
  background: #efefef;
}

.swiper {
  width: 100%;
  height: 400rpx;
}

.swiper image {
  width: 100%;
}

.broadcast {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
}

.bl {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon {
  margin-right: 20rpx;
  width: 40rpx;
  height: 50rpx;
}

.t1 {
  color: #7e318e;
  font-size: 15px;
  font-weight: 600;
}

.t2 {
  color: #7e318e;
  font-size: 15px;
}

.menu {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 10rpx;
}

.menu-item text {
  margin-top: 10rpx;
  font-size: 15px;
  color: #666;
  font-weight: 800;
}

.title-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.title-wrap .icon1 {
  width: 30px;
  height: 30px;
}

.more {
  padding: 0 20rpx;
  border-radius: 20px;
  font-size: 14px;
  background: #6e2b7c;
  color: #fff;
}

.list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  padding-top: 30rpx;
  background: #fff;
}

.l-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  width: 49%;
  box-shadow: 0 0 2px #eee;
}

.l-item image {
  width: 100%;
  max-height: 240rpx;
}

.l-item text {
  padding: 10rpx 0;
  padding-left: 10rpx;
  font-size: 15px;
  font-weight: 800;
  text-shadow: 0 0 1px #888;
}
.video-wrap {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background: #fff;
  text-align: center;
}
.video-wrap video {
  margin: 0 auto;
  width: 95%;
}
.hudon-list {
  display: flex;
}