/* pages/mine/mine.wxss */

page {
  background: #fff;
}

.swiper {
  width: 100%;
  height: 500rpx;
}

.btn-group {
  margin: 20rpx;
}

.btn-item {
  margin: 10rpx auto;
  padding: 10rpx 0;
  width: 70%;
  background-color: #7e318e;
  color: #fff;
  text-align: center;
  font-weight: 800;
}

.btn-item:last-child {
  border: 2px solid #7e318e;
  background-color: #fff;
  color: #7e318e;
}

.user-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 20rpx 0;
}

.user-wrap .userAvatarUrl{
  width: 80px;
  height: 80px;
  border: 1px solid #7e318e;
  border-radius: 50%;
  overflow: hidden;
}
.user-wrap .userNickName {
  color: #7e318e;
  font-weight: 800;
}
